@model MvcCatalogue.Models.EditProfileModel
@{
    ViewBag.Title = "EditProfile";
}

<h2>EditProfile</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-group">
        @Html.Label("New name: ")
        @Html.EditorFor(s => s.FullName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(s => s.FullName, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.Label("New e-mail: ")
        @Html.EditorFor(s => s.Email, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(s => s.Email, "", new { @class = "text-danger" })
    </div>

    <input type="submit" value="Save" class="btn btn-default" />
}